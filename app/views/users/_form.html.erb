<!-- Example: app/views/users/_form.html.erb -->
<%= form_with(model: @user, local: true) do |form| %>
  <!-- Add form fields -->
  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <!-- Add more fields as needed -->
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
